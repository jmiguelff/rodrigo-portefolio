---
// Layout import — provides basic page elements: <head>, <nav>, <footer> etc.
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="video-wrapper">
    <div class="video-background">
      <video autoplay loop muted playsinline>
        <source src="/motorshell.mp4" type="video/mp4" />
      </video>
    </div>
    <div class="video-label">
      <p><span>motorshell</span> Espaço Ócio, 2022</p>
    </div>
  </div>

  <div class="contacts-wrapper">
    <img
      src="/mechanicDrawing1.jpeg"
      loading="lazy"
      alt="Mechanic machine by Rodrigo Aroso."
      class="contacts-image"
    />
    <div class="social-links">
      <ul>
        <li>
          <a href="https://www.instagram.com/aroso_rodrigo/">instagram,</a>
        </li>
        <li><a href="https://vimeo.com/rodrigoaroso">vimeo</a></li>
      </ul>
    </div>
    <div class="footer">
      <div class="contacts">
        <p>+351 917734664</p>
        <p>rodrigoo.aroso@gmail.com</p>
        <p>o.rodrigo.aroso@gmail.com</p>
      </div>
      <div class="copyrights">
        <p><span>© Copyright rodrigo aroso, 2023 All Rights Reserved.</span></p>
        <p>web design/development: diogo oliveira, joão ferreira</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .video-label {
    padding-left: 1rem;
  }

  p {
    color: var(--black-50);
    font-family: var(--font-body);
    font-size: var(--text-sm);
    line-height: 22px;
  }

  p span {
    color: var(--black-50);
    font-family: var(--font-brand);
    font-size: var(--text-sm);
    line-height: 22px;
  }

  .video-wrapper {
    height: 100vh;
  }

  .video-background {
    overflow: hidden;
  }

  .video-background > video {
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -100;
    background-position: 50%;
    background-size: cover;
    margin: auto;
    position: absolute;
    top: -100%;
    bottom: -100%;
    left: -100%;
    right: -100%;
    display: block;
  }

  .video-label {
    position: absolute;
    bottom: -3rem;
  }

  .contacts-wrapper {
    position: relative;
    width: 100%;
    height: 100vh;
  }

  .contacts-wrapper > img {
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 100%;
    height: 100%;
    object-fit: scale-down;
  }

  .social-links {
    position: absolute;
    padding: 1rem;
    top: 55%;
    width: 100%;
  }

  .social-links ul {
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
  }

  .social-links li {
    list-style: none;
  }

  .social-links li a {
    display: block;
    text-decoration: none;
    color: var(--black-50);
    font-family: var(--font-brand);
    font-size: var(--text-2xl);
    line-height: 2rem;
  }

  .social-links li a:hover {
    filter: blur(2px);
  }

  .footer {
    padding: 1rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: absolute;
    width: 100%;
    bottom: 0;
  }

  .contacts > p {
    margin: 0;
    line-height: normal;
  }

  .copyrights > p {
    margin: 0;
    line-height: normal;
    text-align: end;
  }
</style>
